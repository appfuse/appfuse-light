<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd"
      xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>${message:userForm.title}</title>
</head>
<body>

	<form t:id="userForm" clientValidation="true">
		<t:errors/>

		<div class="t-beaneditor">
			<t:beaneditor t:id="user" object="user"
                exclude="id,confirmPassword,passwordHint,phoneNumber,website,version,
                         enabled,accountExpired,accountLocked,credentialsExpired">
			</t:beaneditor>

			<div class="t-beaneditor-row" style="text-align: center">
				<input type="submit" id="save" value="Save"/>
				<input t:type="submit" t:id="delete" value="Delete"/>
                <input t:type="submit" t:id="cancel" value="Cancel"/>
			</div>
		</div>
 	</form>

    <script type="text/javascript">
        Form.focusFirstElement($("userForm"));
    </script>

</body>
</html>