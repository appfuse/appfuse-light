<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd"
      xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>${message:userList.title}</title>
</head>
<body>

<div>
    <t:messagebanner t:id="message"/>
    <t:eventlink t:id="addButton">
        <input type="button" class="button" value="Add User" style="float: right; margin-top: -30px; width: 100px"/>
    </t:eventlink>
</div>

<t:grid source="users" row="user" id="userList" class="table"
    exclude="username,password,confirmPassword,passwordHint,phoneNumber,website,
             fullName,accountNonExpired,accountNonLocked,credentialsNonExpired,
             version,enabled,accountExpired,accountLocked,credentialsExpired">
    <t:parameter name="idCell">
        <t:pagelink page="userform" context="user.id">
            ${user.id}
        </t:pagelink>
    </t:parameter>
</t:grid>

<script type="text/javascript">
    highlightTableRows("userList");
</script>
</body>
</html>